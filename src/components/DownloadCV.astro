<a href="/cv.pdf" target="_blank" id="download-cv" download="cv" class="fixed bottom-2 right-2 md:bottom-12 md:right-12 bg-accent text-black flex items-center gap-4 p-4 rounded-lg cursor-pointer bounceAnimation">
    <h4 class="font-semibold">CV</h4>
</a>

<style>
    @keyframes bounceAnimation {
        0%, 100% {
            transform: translateY(0) rotate(0);
        }
        25% {
            transform: translateY(-20px) rotate(0);
        }
        50% {
            transform: translateY(0);
        }
        75% {
            transform: rotate(30deg);
        }
    }

    .bounceAnimation {
        animation: bounceAnimation 3s ease-in-out infinite 3.5s;
    }
    .bounceAnimation.paused {
        animation-play-state: paused; 
    }
</style>

<script>
    const downloadButton = document.getElementById('download-cv');
    downloadButton?.addEventListener('animationiteration', () => {
        setTimeout(() => {
            downloadButton.classList.add('paused');
            setTimeout(() => {
                downloadButton.classList.remove('paused');
            }, 2000);
        }, 0); 
    });

 
</script>
